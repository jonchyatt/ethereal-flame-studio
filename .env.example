# Ethereal Flame Studio - Environment Variables
#
# Copy this file to .env and configure your values.
# Do NOT commit your .env file to version control!

# =============================================================================
# Redis (required for batch rendering)
# =============================================================================

REDIS_PASSWORD=change_this_password

# =============================================================================
# Phase 3: Rendering
# =============================================================================

# Output directory for rendered videos
RENDER_OUTPUT_DIR=./output

# Whisper transcription model (tiny, base, small, medium, large-v3)
WHISPER_MODEL=large-v3

# =============================================================================
# Phase 4: Automation
# =============================================================================

# Google Drive sync (via rclone)
# Configure rclone first: rclone config
GDRIVE_REMOTE=gdrive
GDRIVE_OUTPUT_FOLDER=EtherealFlame/Renders

# ntfy push notifications
NTFY_TOPIC=ethereal-flame
NTFY_SERVER=https://ntfy.sh

# Google Sheets metadata export
# Follow docs/google-drive-setup.md for OAuth setup
GOOGLE_SHEETS_ID=your_spreadsheet_id_here

# =============================================================================
# Phase 5: n8n Integration + Remote Access
# =============================================================================

# Cloudflare Tunnel (for remote access)
# Get token from: Cloudflare Dashboard -> Zero Trust -> Networks -> Tunnels
CLOUDFLARE_TUNNEL_TOKEN=your_tunnel_token_here

# n8n Configuration
# Replace with your actual domain when using Cloudflare Tunnel
N8N_HOST=localhost
N8N_PROTOCOL=http
N8N_WEBHOOK_URL=http://localhost:5678/

# n8n Authentication (CHANGE THESE!)
N8N_BASIC_AUTH_ACTIVE=true
N8N_USER=admin
N8N_PASSWORD=changeme

# n8n Webhook for render complete notifications
# This is where the render server sends job completion data
N8N_WEBHOOK_RENDER_URL=http://n8n:5678/webhook/render-complete
N8N_WEBHOOK_SECRET=your_shared_secret_here

# YouTube Upload Defaults (used in n8n workflow)
# Category IDs: 10=Music, 22=People&Blogs, 24=Entertainment
YOUTUBE_DEFAULT_CATEGORY=10
YOUTUBE_DEFAULT_PRIVACY=private
YOUTUBE_DEFAULT_TAGS=meditation,visualization,audio reactive

# Optional: Blotato API for multi-platform posting
# Sign up at https://www.blotato.com/
# BLOTATO_API_KEY=your_blotato_api_key

# =============================================================================
# Jarvis: API Keys
# =============================================================================

# Anthropic API key for Claude integration (required for Jarvis intelligence)
# Get your key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=

# Deepgram API key for Speech-to-Text
# Get your key from: https://console.deepgram.com/
DEEPGRAM_API_KEY=

# AWS credentials for Polly TTS (Neural voices)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1

# =============================================================================
# Jarvis: Notion Integration
# =============================================================================

# Notion Integration Token
# Create at: https://www.notion.so/my-integrations
# Then share your databases with the integration
NOTION_TOKEN=

# Life OS Bundle Database IDs
# Run `npm run discover-notion` to find your database IDs
# DATA_SOURCE_ID = for queries, DATABASE_ID = for creates
NOTION_TASKS_DATA_SOURCE_ID=
NOTION_TASKS_DATABASE_ID=
NOTION_BILLS_DATA_SOURCE_ID=
NOTION_BILLS_DATABASE_ID=
NOTION_PROJECTS_DATA_SOURCE_ID=
NOTION_GOALS_DATA_SOURCE_ID=
NOTION_HABITS_DATA_SOURCE_ID=
NOTION_RECIPES_DATA_SOURCE_ID=
NOTION_MEAL_PLAN_DATA_SOURCE_ID=
NOTION_MEAL_PLAN_DATABASE_ID=
NOTION_SUBSCRIPTIONS_DATA_SOURCE_ID=
NOTION_INGREDIENTS_DATA_SOURCE_ID=
NOTION_SHOPPING_LIST_DATABASE_ID=

# =============================================================================
# Jarvis: Telegram Bot
# =============================================================================

JARVIS_ENABLE_TELEGRAM=false
TELEGRAM_BOT_TOKEN=
TELEGRAM_WEBHOOK_SECRET=
TELEGRAM_OWNER_ID=

# =============================================================================
# Jarvis: Database (Memory System)
# =============================================================================

# Database
# Local: http://127.0.0.1:8080 (via turso dev)
# Production: libsql://jarvis-[account].turso.io
DATABASE_URL=
DATABASE_AUTH_TOKEN=

# =============================================================================
# General
# =============================================================================

# Timezone (for n8n scheduling and timestamps)
TZ=America/Los_Angeles

# Data directory (SQLite database, cache files)
DATA_DIR=./data
