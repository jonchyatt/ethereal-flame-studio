# Ethereal Flame Studio - Environment Variables
#
# Copy this file to .env and configure your values.
# Do NOT commit your .env file to version control!

# =============================================================================
# Phase 3: Rendering
# =============================================================================

# Output directory for rendered videos
RENDER_OUTPUT_DIR=./output

# Whisper transcription model (tiny, base, small, medium, large-v3)
WHISPER_MODEL=large-v3

# =============================================================================
# Phase 4: Automation
# =============================================================================

# Google Drive sync (via rclone)
# Configure rclone first: rclone config
GDRIVE_REMOTE=gdrive
GDRIVE_OUTPUT_FOLDER=EtherealFlame/Renders

# ntfy push notifications
NTFY_TOPIC=ethereal-flame
NTFY_SERVER=https://ntfy.sh

# Google Sheets metadata export
# Follow docs/google-drive-setup.md for OAuth setup
GOOGLE_SHEETS_ID=your_spreadsheet_id_here

# =============================================================================
# Phase 5: n8n Integration + Remote Access
# =============================================================================

# Cloudflare Tunnel (for remote access)
# Get token from: Cloudflare Dashboard -> Zero Trust -> Networks -> Tunnels
CLOUDFLARE_TUNNEL_TOKEN=your_tunnel_token_here

# n8n Configuration
# Replace with your actual domain when using Cloudflare Tunnel
N8N_HOST=localhost
N8N_PROTOCOL=http
N8N_WEBHOOK_URL=http://localhost:5678/

# n8n Authentication (CHANGE THESE!)
N8N_BASIC_AUTH_ACTIVE=true
N8N_USER=admin
N8N_PASSWORD=changeme

# n8n Webhook for render complete notifications
# This is where the render server sends job completion data
N8N_WEBHOOK_RENDER_URL=http://n8n:5678/webhook/render-complete
N8N_WEBHOOK_SECRET=your_shared_secret_here

# =============================================================================
# General
# =============================================================================

# Timezone (for n8n scheduling and timestamps)
TZ=America/Los_Angeles

# Data directory (SQLite database, cache files)
DATA_DIR=./data
