{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": "..",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["../src/*"]
    }
  },
  "include": [
    "./**/*.ts",
    "../src/lib/jobs/**/*.ts",
    "../src/lib/db/job-schema.ts",
    "../src/lib/storage/**/*.ts",
    "../src/lib/audio-prep/**/*.ts"
  ]
}
